<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-body-tertiary rounded", local: true) do |f| %>
        <form>
          <div class="row mb-3">
            <%= f.label :title, class: "fw-bold col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
            </div>
          </div>
          <div class="row mb-3">
            <%= f.label :description, class: "fw-bold col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
            </div>
          </div>
            <p>
              <%= f.submit class: "btn btn-outline-success" %>
            </p>
        </form>
      <% end %>
      <%= link_to 'Back', articles_path, class: "btn btn-outline-success mb-4" %>
    </div>
  </div>
</div>