    <body>
      <% @articles.each do |articles| %>
      <div class="card text-center" id="card_winelist">
        <h3 class="card-header" id="card_header_winelist">
          <%= articles.title %>
        </h3>
        <div class="card-body">
          <p class="card-text"><%= articles.description %></p>
          <small>Created <%= time_ago_in_words(articles.created_at) %> ago, updated <%= time_ago_in_words(articles.updated_at) %> ago</small>
        </div>
        <div class="card-footer text-muted">
          <%= link_to 'Mehr...', article_path(articles), class: "btn btn-outline-success" %>
          <%= link_to 'Bearbeiten', edit_article_path(articles), class: "btn btn-outline-success" %>
          <%= link_to 'LÃ¶schen', article_path(articles), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-success" %>
        </div>
      </div>
      <br/>
      <% end %>
    </body>

  <br/>
  <%= link_to 'Neuer Wein', new_article_path, class: "btn btn-outline-success" %>
