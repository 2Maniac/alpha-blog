<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <body>
    <% @articles.each do |articles| %>
    <tr>
      <td><%= articles.title %></td>
      <td><%= articles.description %></td>
      <td><%= link_to 'Show', article_path(articles) %></td>
      <td><%= link_to 'Edit', edit_article_path(articles) %></td>
      <td><%= link_to 'Delete', article_path(articles), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </body>
</table>
<br/>
<%= link_to 'New article', new_article_path %>