<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-5 bg-body-tertiary rounded", local: true) do |f| %>
  <form>
    <div class="row mb-3">
      <%= f.label :name, "Category name", class: "fw-bold col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
      </div>
    </div>

      <p>
        <%= f.submit class: "btn btn-outline-success" %>
      </p>
  </form>
<% end %>